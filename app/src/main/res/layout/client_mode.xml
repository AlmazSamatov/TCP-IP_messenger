<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="70dp"
        android:text="@string/client_mode_setup" />

    <TextView
        android:id="@+id/ip_address_client"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp"
        android:text="@string/ip_address" />

    <EditText
        android:id="@+id/ip_address_value_client"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:inputType="text"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/port_client"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp"
        android:text="@string/port" />

    <EditText
        android:id="@+id/port_value_client"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:textSize="22sp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/connect"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:onClick="connectOnClick"
        android:text="@string/connect" />


</LinearLayout>